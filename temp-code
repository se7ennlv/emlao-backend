async findAll(): Promise<Category[]> {
    try {
      const populate = { path: 'shop', select: 'name' };
      const sortBy: any = { name: 1 };
      const categories = this.categoryModel.find()
        .populate(populate).sort(sortBy).exec();

      return categories;
    } catch (error) {
      throw new InternalServerErrorException('ບໍ່ສາມາດໂຫຼດຂໍ້ມູນໄດ້!');
    }
  }
